import java.util.List;
package com.trabajoentornos;

public class Usuario {
    private String nombre;
    private String email;
    private Cesta cesta;
    private Catalogo catalogo;

    public Usuario(String nombre, String email, Catalogo catalogo) {
        this.nombre = nombre;
        this.email = email;
        this.catalogo = catalogo;
        this.cesta = new Cesta();
    }

    public void buscarLibros(String palabrasClave) {
        List<Libro> resultados = catalogo.buscarLibros(palabrasClave);
        if (resultados.isEmpty()) {
            System.out.println("No se encontraron resultados.");
        } else {
            System.out.println("Resultados encontrados:");
            for (Libro libro : resultados) {
                System.out.println(catalogo.recopilarDatos(libro));
            }
        }
    }

    public void agregarAlCarrito(List<Libro> libros) {
        for (Libro libro : libros) {
            cesta.agregarLibro(libro);
        }
    }

    public void visualizarCesta() {
        cesta.visualizar();
    }

    public void realizarPago(String metodoPago) {
        if (cesta.realizarPago(metodoPago)) {
            cesta.pedidoRealizado();
        }
    }
}