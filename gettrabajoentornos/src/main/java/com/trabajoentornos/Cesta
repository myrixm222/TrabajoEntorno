import java.util.ArrayList;
import java.util.List;
package com.trabajoentornos;
    
    public class Cesta {
        private List<Libro> librosEnCesta;
    
        public Cesta() {
            librosEnCesta = new ArrayList<>();
        }
    
        public void agregarLibro(Libro libro) {
            librosEnCesta.add(libro);
        }
    
        public void visualizar() {
            if (librosEnCesta.isEmpty()) {
                System.out.println("La cesta está vacía.");
            } else {
                System.out.println("Libros en la cesta:");
                for (Libro libro : librosEnCesta) {
                    System.out.println(libro.getDatos());
                }
            }
        }
    
        public boolean realizarPago(String metodoPago) {
            if (librosEnCesta.isEmpty()) {
                System.out.println("No se puede realizar el pago. La cesta está vacía.");
                return false;
            }
            System.out.println("Pago realizado con " + metodoPago);
            return true;
        }
    
        public void pedidoRealizado() {
            System.out.println("Pedido realizado con éxito.");
            librosEnCesta.clear();
        }
    
    }